{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "baseUrl": ".",
    "paths": {
      "@agent-karma/sdk": ["./sdk/src"],
      "@agent-karma/api": ["./api/src"]
    }
  },
  "references": [
    { "path": "./sdk" },
    { "path": "./api" },
    { "path": "./dashboard" }
  ],
  "exclude": [
    "node_modules",
    "dist",
    "contracts"
  ]
}